{
  "schemaVersion": "2.2",
  "description": "Command Document Example JSON Template",
  "parameters": {
    "destinationOU": {
      "type": "String",
      "description": "Disable OU Location",
      "default": ""
    },
    "sourceOU": {
      "type": "String",
      "description": "Scan Scope",
      "default": ""
    }
  },
  "mainSteps": [
    {
      "action": "aws:runPowerShellScript",
      "name": "ScanExpiredAccounts",
      "inputs": {
        "runCommand": [
          "",
          "$disabledAccount = Get-ADUser -Filter {Title -eq 'AutoExpireEnabled'} -SearchBase '{{sourceOU}}' -Properties AccountExpirationDate | Where-Object { $_.AccountExpirationDate -ne $null -and $_.AccountExpirationDate -lt (Get-Date) } ",
          "foreach ($account in $disabledAccount){",
          "    Move-ADObject -Identity $account -TargetPath $destinationOU",
          "    Disable-ADAccount -Identity $account.SamAccountName",
          "    Get-ADUser -Identity $account -Properties DisplayName, EmailAddress, AccountExpirationDate| Select-Object DisplayName, EmailAddress, AccountExpirationDate",
          "    Write-Host 'Account '+ $account.SamAccountName +' moved to {{destinationOU}} and disabled' ",
          "}",
          ""
        ]
      }
    }
  ]
}
